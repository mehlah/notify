<div class="row">
  <div class="small-12 medium-6 columns medium-centered">
    <div class="card">
      <h3>Réinitialiser votre mot de passe</h3>
      <hr>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <%= f.input :password, label: 'Nouveau mot de passe', required: true, autofocus: true %>
        <%= f.input :password_confirmation, label: 'Confirmer votre mot de passe', required: true %>

        <%= f.button :submit, 'Réinitialiser mon mot de passe' %>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
